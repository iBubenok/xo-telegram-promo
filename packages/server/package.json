{
  "name": "server",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.build.json && npm run copy:client",
    "clean": "rimraf dist",
    "copy:client": "node scripts/copy-client.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.10",
    "@types/supertest": "^6.0.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "tsx": "^4.19.2",
    "vitest": "^2.1.5"
  }
}
